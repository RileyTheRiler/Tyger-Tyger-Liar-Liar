{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "theory.schema.json",
  "title": "Theory",
  "description": "An investigative theory",
  "type": "object",
  "required": [
    "id",
    "title",
    "summary"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "requirements": {
      "type": "object",
      "description": "clues/flags",
      "properties": {
        "clues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "internalization_time": {
      "type": "integer",
      "description": "Minutes or hours required"
    },
    "on_internalize_effects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "value"
        ],
        "properties": {
          "type": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "value": {}
        }
      }
    },
    "unlocks": {
      "type": "object",
      "description": "dialogue options, inserts, checks",
      "properties": {
        "dialogue": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "inserts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "checks": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          }
        }
      }
    }
  }
}