{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "npc.schema.json",
  "title": "NPC",
  "description": "A non-player character",
  "type": "object",
  "required": [
    "id",
    "name"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "biography": {
      "type": "string"
    },
    "traits": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "trust_initial": {
      "type": "integer",
      "default": 0
    },
    "dialogue_roots": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}