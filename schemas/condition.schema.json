{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "condition.schema.json",
  "title": "Condition",
  "description": "An injury or mental condition",
  "type": "object",
  "required": [
    "id",
    "name",
    "category"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": [
        "physical",
        "mental",
        "supernatural",
        "environmental"
      ]
    },
    "severity": {
      "type": "string",
      "enum": [
        "minor",
        "moderate",
        "severe",
        "critical"
      ]
    },
    "mechanical_penalties": {
      "type": "object",
      "description": "skill/attribute modifiers",
      "properties": {
        "skill_modifiers": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          }
        },
        "attribute_modifiers": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          }
        }
      }
    },
    "treatment_options": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "description"
        ],
        "properties": {
          "description": {
            "type": "string"
          },
          "requires_item": {
            "type": "string"
          },
          "requires_skill": {
            "type": "string"
          },
          "dc": {
            "type": "integer"
          }
        }
      }
    }
  }
}