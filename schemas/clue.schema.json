{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "clue.schema.json",
  "title": "Clue",
  "description": "An investigative clue",
  "type": "object",
  "required": [
    "id",
    "title",
    "text"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "source_scene_id": {
      "type": "string"
    },
    "reliability": {
      "type": [
        "number",
        "string"
      ],
      "description": "0-1 or enum (confirmed, probable, debunked, etc)"
    },
    "links_to_theories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}