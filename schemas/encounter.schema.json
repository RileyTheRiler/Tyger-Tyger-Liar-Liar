{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "encounter.schema.json",
  "title": "Encounter",
  "description": "A textual tactical sequence",
  "type": "object",
  "required": [
    "id",
    "intro_text",
    "options_by_turn"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "intro_text": {
      "type": "object",
      "required": [
        "base"
      ],
      "properties": {
        "base": {
          "type": "string"
        },
        "lens": {
          "type": "object",
          "properties": {
            "believer": {
              "type": "string"
            },
            "skeptic": {
              "type": "string"
            },
            "haunted": {
              "type": "string"
            }
          }
        }
      }
    },
    "state_defaults": {
      "type": "object",
      "description": "Initial environment state"
    },
    "turn_rules": {
      "type": "object",
      "description": "Environment effects per turn"
    },
    "options_by_turn": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "label",
            "skill",
            "dc",
            "outcomes"
          ],
          "properties": {
            "label": {
              "type": "string"
            },
            "skill": {
              "type": "string"
            },
            "dc": {
              "type": "integer"
            },
            "outcomes": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "object"
                },
                "failure": {
                  "type": "object"
                },
                "partial": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "exit_conditions": {
      "type": "object",
      "description": "When does the encounter end?"
    }
  }
}