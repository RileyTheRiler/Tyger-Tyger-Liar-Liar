{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "scene.schema.json",
  "title": "Scene",
  "description": "A game scene with narrative text, choices, and effects",
  "type": "object",
  "required": [
    "id",
    "text"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the scene"
    },
    "title": {
      "type": "string",
      "description": "Display title for the scene"
    },
    "location_id": {
      "type": "string",
      "description": "Reference to location where this scene takes place"
    },
    "time_cost": {
      "type": [
        "integer",
        "string"
      ],
      "description": "Minutes or 'blocks'"
    },
    "prereqs": {
      "type": "object",
      "description": "Flags, items, previous scenes",
      "properties": {
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "items": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "previous_scenes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "text": {
      "type": "object",
      "required": [
        "base"
      ],
      "properties": {
        "base": {
          "type": "string",
          "description": "Base narrative text"
        },
        "lens": {
          "type": "object",
          "description": "believer/skeptic/haunted variants",
          "properties": {
            "believer": {
              "type": "string"
            },
            "skeptic": {
              "type": "string"
            },
            "haunted": {
              "type": "string"
            }
          }
        },
        "inserts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "when",
              "text",
              "insert_at"
            ],
            "properties": {
              "when": {
                "type": "object",
                "description": "Conditions for insert"
              },
              "text": {
                "type": "string"
              },
              "insert_at": {
                "type": "string",
                "description": "BEFORE_CHOICES, AFTER_PARAGRAPH:n, AFTER_BASE"
              }
            }
          }
        }
      }
    },
    "effects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "value"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "flag",
              "trust",
              "time",
              "attention",
              "population"
            ]
          },
          "target": {
            "type": "string"
          },
          "value": {}
        }
      }
    },
    "choices": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "label",
          "next_scene"
        ],
        "properties": {
          "label": {
            "type": "string"
          },
          "next_scene": {
            "type": "string"
          },
          "check": {
            "type": "object",
            "properties": {
              "skill": {
                "type": "string"
              },
              "dc": {
                "type": "integer"
              }
            }
          },
          "effects": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "type",
                "value"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "flag",
                    "trust",
                    "time",
                    "attention",
                    "population"
                  ]
                },
                "target": {
                  "type": "string"
                },
                "value": {}
              }
            }
          }
        }
      }
    },
    "passive_clues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "clue_id",
          "visible_when"
        ],
        "properties": {
          "clue_id": {
            "type": "string"
          },
          "visible_when": {
            "type": "object",
            "description": "Conditions for visibility"
          }
        }
      }
    },
    "encounter_id": {
      "type": "string"
    }
  }
}